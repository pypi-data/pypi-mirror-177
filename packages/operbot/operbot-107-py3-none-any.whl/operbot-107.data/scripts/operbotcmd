__version__ = "107"


"feeding rss into your irc channel"


import os
import pwd
import sys


from operbot.object import Wd, cdir, update
from operbot.handler import Cfg, Handler, command, parse, scan


from operbot import cmds, irc, rss


Wd.workdir = "/var/lib/operbot/"


scan(cmds)
scan(irc)
scan(rss)


class CLI(Handler):

    @staticmethod
    def raw(txt):
        print(txt)


def main():
    parse(' '.join(sys.argv[1:]))
    cli = CLI()
    evt = command(cli, Cfg.otxt)
    evt.wait()


main()
