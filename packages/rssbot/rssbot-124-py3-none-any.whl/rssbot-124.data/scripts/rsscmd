"feeding rss into your irc channel"


import sys


from rssbot.object import Wd, update
from rssbot.handler import Cfg, Handler, command, parse, scan


from rssbot import cmds, irc, rss


Wd.workdir = "/var/lib/rssbot/"


scan(cmds)
scan(irc)
scan(rss)


class CLI(Handler):

    @staticmethod
    def raw(txt):
        print(txt)



def main():
    txt = ' '.join(sys.argv[1:])
    cfg = parse(txt)
    update(Cfg, cfg)
    cli = CLI()
    evt = command(cli, cfg.otxt)
    evt.wait()


main()
