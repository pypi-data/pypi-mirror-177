#!python
"""MyrtDesk API control app"""
from asyncio import run
from myrt_desk_api.bin import (
    MyrtDeskCLI,
    backlight_commands,
    system_commands,
    legs_commands
)

if __name__ == '__main__':
    app = MyrtDeskCLI()
    app.register(
        backlight_commands,
        system_commands,
        legs_commands
    )
    run(app.run())
